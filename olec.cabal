maintainer:          itstheimp@gmail.com
category:            Development, Editor
build-type:          Simple
cabal-version:       >=1.10

source-repository head
  type: git
  location: https://github.com/vapourismo/olec.git

executable olec
  ghc-options:         -threaded -j6 -O2 -Wall
  main-is:             Main.hs
  extra-libraries:     ncursesw
  build-depends:       base >=4.7 && <4.8,
                       bytestring >=0.10 && <0.11,
                       mtl >=2.2.1,
                       lens >=4.2,
                       containers >=0.5.5.1
  c-sources:           ext/terminal.c
  hs-source-dirs:      src
  default-language:    Haskell2010
